---
import eventos from '../../eventos.json'; // Asegúrate de tener el archivo eventos.json en la ubicación correcta
import Layout from '../../layouts/Layout.astro';
---

<Layout description="Eventos de Mary Prieto" title="Eventos ">
  <div class="flex flex-col gap-4 sm:gap-6">
    <h1 class="text-center text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">Eventos</h1>
    <p class="mx-auto max-w-xl text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl">
      Todos los eventos
    </p>
  </div>
  <section class="container mx-auto mt-10 p-5">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3">
      {
        eventos.map((evento) => (
          <div class="rounded-lg  p-4">
            <a href={`/evento/${evento.id}`} class="block">
              <img
                src={evento.imagen}
                alt={evento.nombre}
                class="mb-2 h-48 w-full rounded-lg object-cover"
              />
              <h2 class="text-gray-900 text-3xl font-semibold">{evento.nombre}</h2>
              <div class="mb-4 mt-2 h-1 w-10 rounded bg-pink" />
              <p class="text-gray-600">{evento.descripcion}</p>
            </a>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
